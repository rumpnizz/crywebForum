@model cryWeb.ViewModels.CreateThreadVM

@{
    ViewBag.Title = "CreateThread";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="thread-detail">
            <div class="header">
            </div>
            <div>
                <div>
                    @(User.Identity.Name)
                </div>
                <div>
                    @Html.HiddenFor(model => model.Thread.ParentId)
                    @Html.TextBoxFor(model => model.Thread.Title)
                    @Html.ValidationMessageFor(model => model.Thread.Title)
                    @Html.TextAreaFor(model => model.Post.Text)
                    @Html.ValidationMessageFor(model => model.Post.Text)
                    <input type="submit" value="Create" />
                </div>
            </div>
                
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
